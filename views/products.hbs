{{#section 'head'}}
  <link rel="stylesheet" href="css/products.css" />
  <script src="js/expandables.js" defer></script>
  <script src="libs/modal-video/jquery-modal-video.min.js" defer></script>
  <link rel="stylesheet" href="libs/modal-video/modal-video.min.css" media="none" onload="if(media!='all')media='all'" />
  <script src="js/products.js" defer></script>
{{/section}}

<!-- Heading and details -->
<section class="our-products-heading">
  <div class="container text-center">
    <div class="row">
      <div class="offset-lg-3"></div>
      <div class="col-lg-6">
        <h1 class="display-5 text-center font-weight-light text-capitalize">Our Products</h1>
        <p>
          Ranging from arcade games to educational applications, 
          we aim to transform how people learn and develop themselves in different
          areas.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Category buttons -->
<div class="category-buttons d-none d-md-block">
  <div class="container-fluid">
    <div class="category-row row justify-content-center">
      <div class="cat-btn-container col-md text-center">
        <button class="cat-btn" data-scroll="true" data-to=".games-cat" data-toggle="tooltip" data-placement="top" title="View our games">
          <div class="circle-icon">
            <i class="icon fas fa-gamepad fa-fw"></i>
          </div>
          <p class="pt-2 mb-0">Games</p>
        </button>
      </div>
    </div>
  </div>
</div>

<section class="our-products">
  <div class="games-cat py-4">
    <div class="d-md-none d-table icon-sep">
      <i class="icon fas fa-gamepad fa-fw"></i>
    </div>
    <h1 class="display-5 text-center font-weight-light text-capitalize">Games</h1>
    <div class="container my-4">
      <div class="row text-center" id="game-row-one">
        <div class="offset-md-4 col-md-4">
          <button class="btn-hidden" data-expand="#zombie-game-info" title="Click to view info about Dead Instinct">
            <div class="product-img-wrapper position-relative shadow">
              <img src="/images/products/dead-instinct/dead-instinct.png" class="product-img img-fluid" alt="Dead Instinct game cover image" />
            </div>
          </button>
          <div class="store-buttons align-items-right mt-3">
            <a class="mr-3" href="#" target="_blank" title="Go to App Store">
              <i class="apple-store store-icon fab fa-apple fa-fw"></i>
            </a>
            <a href="#" target="_blank" title="Go to Play Store">
              <img src="/images/play-store-icon.png" class="android-store store-icon fa-fw" alt="Play store icon" />
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="expandable product-info-wrapper games-product-info mx-md-5 position-relative" data-open="false">
      <div class="panel-controls">
        <button class="float-right close-btn btn-hidden" data-expand-close="true">
          &times;
        </button>
      </div>

      <div class="py-4">
        <div id="zombie-game-info" class="product-info">
          <div class="container">
            <h3 class="ml-lg-2 pb-2 text-lg-left text-center">Dead Instinct</h3>
            <div class="row">
              <div class="col-lg">
                <div class="video-thumbnail position-relative text-center">
                  <img src="images/products/dead-instinct/dead-instinct-yt.png" class="img-fluid" alt="Dead Instinct YouTube Thumbnail"/>
                  <button class="video-popup-btn" data-video-id="1K-gUqRlgfg">
                    <i class="fas fa-play"></i>
                  </button>
                </div>
              </div>
              <div class="col-lg-8">
                <div class="product-description mt-4 mt-lg-0">
                  <p>
                    Dead Instinct is here to develop your mental chronometry skills! Set in a world where a scientific experiment on gene manipulation had gone seriously wrong, everyone is now vulnerable to being mutated by this life-threatening airborne disease. This endless runner will challenge you to survive or infect others. Are you fast enough to escape? Start running today and find out! 
                    <div class="store-buttons-container text-lg-left text-center">
                      <a href="#" target="_blank" class="read-more-btn btn btn-md moon-btn-dark btn-outline-dark">
                        <i class="apple-store store-icon fab fa-apple fa-fw"></i>
                        Download on the App Store
                      </a>
                      <a href="#" target="_blank" class="read-more-btn btn btn-md moon-btn-dark btn-outline-dark ml-md-3 mt-3 mt-md-0">
                        <img src="/images/play-store-icon.png" class="android-store store-icon fa-fw" alt="Play store icon" />
                        Download it on Google Play
                      </a>
                    </div>
                  </p>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>