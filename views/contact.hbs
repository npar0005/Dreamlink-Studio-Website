{{#section 'head'}}

<!-- Page CSS -->
<link rel="stylesheet" href="css/contact.css" />

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

<!-- Page JS -->
<script src="js/email.js"></script>

{{/section}}

<section class="contact-us">
   <div class="container text-center">
    <div class="row">
      <div class="offset-lg-3"></div>
      <div class="col-lg-6">
        <h1 class="display-5 text-center font-weight-light text-capitalize">Contact Us</h1>
        <p>
          We love to hear from our customers and the comminity. 
          We believe that feedback drives creativity and quality. 
          Feel free to get in contact us below, or reach out to use through one of our social medias. 
        </p>
      </div>
    </div>
  </div>
</section>

<section class="get-in-touch p-0">
    <div class="row no-gutters">
      <div class="col-md-8">
        <div class="get-in-touch-form-container">
          <h3 class="font-weight-light">Get in Touch</h3>
          <form action="/contact-form" id="contact-form" class="form needs-validation contact-form" novalidate>
            <div class="form-group">
              <!--label for="exampleInputEmail1">Category</label-->
              <select class="form-control category-dd" name="category" required>
                <option disabled selected>Category</option>
                <option value="Support">Support</option>
                <option value="Bug">Bug Report</option>
                <option value="Sales">Sales and Payment</option>
                <option value="Feature request">Feature Request</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <div class="tell-us-more-container card">
              <h5 class="card-header font-weight-bold">
                Tell us more about yourself
              </h5>
              <div class="card-body">
                <div class="form-row">
                  <div class="form-group col">
                    <!--label for="firstname">Firstname</label-->
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First name" required />
                  </div>
                  <div class="form-group col">
                    <!--label for="surname">Surname</label-->
                    <input type="text" class="form-control" id="surname" name="surname" placeholder="Surname" required />
                  </div>
                </div>
                <div class="form-group mb-0">
                  <!--label for="email">Email</label-->
                  <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com" required/>
                </div>
              </div>
            </div>

            <div class="message-container card mt-3">
              <h5 class="card-header font-weight-bold">
                Message
              </h5>
              <div class="card-body">
                <div class="form-group mb-0">
                  <!--label for="email">Email</label-->
                  <textarea id="message" name="message" class="contact-message form-control" placeholder="Your message..." data-gramm_editor="false" rows="4" required></textarea>
                </div>
              </div>
            </div>

            <div class="form-group mt-3">
              <button type="submit" class="btn btn-outline-dark submit-btn moon-btn btn-block">Submit</button>
            </div>
          </form>
        </div>
      </div>

      <div class="col-md-4">
        <div class="socials-container">
          <div class="contact-info">

            <div class="info-container mb-3">
              <i class="contact-icon fas fa-map-marker-alt"></i> 
              <p>Melbourne, VIC 3001, Australia</p>
            </div>

            <div class="d-flex flex-column">
              <div class="info-container">
                <i class="contact-icon fas fa-envelope"></i>
                <p>Email us</p>
              </div>
              <a class="text-white" href="mailto:admin@dreamlinkstudio.com">admin@dreamlinkstudio.com</a>
            </div>

          </div>

          <div class="socials mt-5">
            <h4 class="text-center">Connect with us</h4>
            <div class="social-links mt-4">
              <a id="facebook" class="social-bubble shadow" href="https://www.facebook.com" target="_blank">
                <i class="social-icon fab fa-facebook-f fa-fw"></i>
              </a>
              <a id="youtube" class="social-bubble shadow" href="https://www.youtube.com" target="_blank">
                <i class="social-icon fab fa-youtube fa-fw"></i>
              </a>
              <a id="linkedin" class="social-bubble shadow" href="https://www.linkedin.com" target="_blank">
                <i class="social-icon fab fa-linkedin-in fa-fw"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>